<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="20dp" android:background="@drawable/border_map_list_round_background" android:orientation="vertical" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="1" android:layout_marginBottom="8dp" android:layout_margin="12dp">

    <ImageView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="5" app:srcCompat="@drawable/locationicon" android:id="@+id/iv_map_marker" android:layout_gravity="center"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="1" android:layout_marginStart="8dp">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="1">

        <TextView
            android:id="@+id/tv_map_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:maxWidth="220dp"
            android:maxLines="1"
            android:text="기관명"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_map_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="10"
            android:text="1등급"
            android:textColor="#64b5f6"
            android:textSize="10dp"
            android:textStyle="bold" />

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="2" android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/textType"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="기관유형"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/tv_map_type" android:layout_marginStart="4dp" android:text="기관유형" android:textColor="@color/colorPrimary" android:textSize="12dp" android:layout_marginEnd="4dp"/>

    </LinearLayout>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="5">

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="주       소"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/tv_map_address" android:layout_marginStart="4dp" android:text="default" android:textColor="@color/colorPrimary" android:textSize="12dp" android:layout_marginEnd="4dp"/>

</LinearLayout>

        <TextView
            android:id="@+id/tv_map_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FF64B5F6"
            android:textSize="10dp"
            android:visibility="gone" />

</LinearLayout>

        <ImageButton
            android:id="@+id/ib_map_bookmark_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#ffffff"
            app:srcCompat="@drawable/star"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</LinearLayout>

</LinearLayout>